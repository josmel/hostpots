#section-1__work
	position relative
	height 390px
	padding 130px 0 100px
	color white
	width 100%
	overflow hidden
	display table
	section
		display table-cell
		vertical-align middle
		max-width 970px
	.parallax-image
		background-image url('../img/trabaja-con-nosotros-section-1.jpg')
		background-repeat no-repeat
		background-size cover
		background-position top center
		position absolute
		width 100%
		height 100%
		top 0
		left 0
	h2
		font-family $dinBold
		em(37px)
		margin-bottom 20px
	h3
		em(26px)
		font-family $linoThin
#section-2__work
	padding 85px 0 85px 0
	form
		fieldset
			em(20px)
			margin-bottom 20px
			font-family $dinMedium
		.form-control
			margin-bottom -4px
			position relative
			p
				position relative
				left -114px
				font-size 14px
				top -19px
			.file
				width 100%
				text-align center
				a
					width 100%
					display block
			#parsley-id-multiple-terms
				left 69%
				width 11%
			.form-checkbox
				display inline-block
				width 365px
				text-align left
				em(18px)
				font-family $dinMedium
				margin-bottom 39px
			.form-select
				display inline-block
				width 365px
				text-align left
				margin-top 22px
				margin-bottom 36px
				select
					height 36px
					margin-right 8px
			.form-input
				input
					width 365px
					color #545454
					border 2px solid $gray-99
				&.form-input
					display inline-block
					position relative
					width 365px
					input
						display block
						border-top none
						border-bottom 2px solid $gray-99
						border-radius 0
						&:first-child
							border-top 2px solid $gray-99
							border-radius 0px
						&:last-child
							border-radius 0 0 5px 5px