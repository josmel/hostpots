input.parsley-success
select.parsley-success
textarea.parsley-success
	border 1px solid #D6E9C6
input.parsley-error
select.parsley-error
textarea.parsley-error
	color #B94A48
.parsley-errors-list
	position absolute
	top 4px
	left 100%
	padding 5px 10px
	list-style-type none
	font-size 1.09em
	width 30%
	border-radius 0 5px 5px 0
	color $skyblue
	transition all .3s linear 0s
.parsley-errors-list.filled
	position absolute
	right: -0px;
	color :red;
	top: 2px;
	left: auto;
	background-color: transparent;
	text-align center
	width: 40px;
	em(20px)
	li
		display none
	&:before
		content "x"
		width 10px
		height 10px			