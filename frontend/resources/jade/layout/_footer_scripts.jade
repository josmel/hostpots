#content_form_login
	.text-center.main_login
		h2 Login
		form(data-parsley-validate, data-mcs-theme="dark", method="post",action!="{{ url('/login') }}").mCustomScrollbar#form_login
			input(type="hidden",name="_token",value!="{{ csrf_token() }}")			
			.form-control
				.form-input
					input(type="text", name="email",value="{{ old('email') }}", placeholder="(*) Email", data-parsley-type="email", required)
				.form-input		
					input(type="password", name="password", placeholder="(*) Contraseña", data-parsley-maxlength="11", required)
			.form-control
				p (*) campo obligatorio	
			.form-control
					input.btn.btn--skyblue.btn--big(type="submit", value="Enviar")
			p ¿Olvidaste tu contraseña? 
				a.login_popup(href!="#content_form_recuperar") Click aquí			
#content_form_recuperar
	.text-center.main_recuperar
		h2 Recuperar contraseña
		form(data-parsley-validate, data-mcs-theme="dark").form-ctn-joinus.mCustomScrollbar.form-recuperar			
			.form-control
				.form-input
					input(type="text", placeholder="Email", data-parsley-type="email", required)
			.form-control
					input.btn.btn--skyblue.btn--big(type="submit", value="Enviar")				
script(src="#{page.static}js/vendor/jquery/jquery.min.js", type="text/javascript")
script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js")
script(data-main="#{page.static}js/main", src="#{page.static}js/vendor/requirejs/require.js")
