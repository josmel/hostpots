.row
	margin 0
header
	position fixed
	z-index 1
#wrapper
	margin-top 64px
	padding-bottom 20px
	padding-right 40px
table
	.btn
		margin 0
		padding 4px 18px
	thead
		tr
			td
				text-align center
	a
		display inline-block
		paper-button
			position relative
			margin 0
			&.btn-edit
				background #2980B9
				border-color #2980B9
			&.btn-delete
				background #A9A19F
				border-color #A9A19F
			.paper-button.content
				padding 0.2em 0.57em
		&:hover
			.btn-delete
				color #fff
.form-control.parsley-error, .form-group .form-control:focus.parsley-error
	background-image -webkit-linear-gradient(#f44336, #f44336),-webkit-linear-gradient(#f44336, #f44336)
	background-image -o-linear-gradient(#f44336, #f44336),-o-linear-gradient(#f44336, #f44336)
	background-image linear-gradient(#f44336, #f44336),linear-gradient(#f44336, #f44336)
.modal-ctn
	width 400px
	.modal-ctn--form
		padding 30px 40px 40px 40px
	.modal-ctn--actions
		text-align center
	.btn-danger--modal
		margin-left 20px
//Modal add exercises
.ctn-addTags
	width 200px
	height 400px
	padding 20px 40px
	box-sizing border-box
	text-align center
	h2
		font-size 30px
		margin-bottom 30px
	.input-ctn
		margin-bottom 20px
	.btn
		display inline-block
		padding 8px 16px
		border-radius 8px
		margin 10px 30px
		color #fff
		background #999
.form-ctn
	text-align center
.active-result.highlighted
	border 0 !important
	font-size 15px
thead
	tr td
		text-align center
span.more-exercise
	padding 3px 15px 3px 15px
	background #4caf50
	font-size 21px
	color #fff
	&:hover
		background #5dbf61
.tag-exercise, .more-exercise
	background-clip padding-box
	background-color #ddd
	color #999
	background-size 100% 19px
	border-radius 3px
	box-shadow 0 0 2px #fff inset,0 1px 0 rgba(0,0,0,.05)
	cursor default
	line-height 13px
	margin 3px 5px 3px 0
	max-width 100%
	padding 3px 20px 3px 5px
	position relative
	float left
	.icon.icon-remove
		position absolute
		top 4px
		right 3px
		display block
		width 12px
		height 12px
		background url(../img/chosen-sprite.png) -42px 1px no-repeat
		font-size 1px
		cursor pointer
		&:hover
			background-position -42px -10px
.exercise-video
	cursor pointer