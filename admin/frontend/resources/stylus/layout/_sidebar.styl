.container-sidebar
	width 18%
	min-width 220px
	max-width 245px
	background #2C2D30
	height 800px
	border-top 1px dashed #fff
	color #fff
	position fixed
	left 0
	top 62px
	z-index 1
	li
		a
			padding 8px
			width 100%
			height 100%
			display block
		&:hover, &.container-sidebar__option--active
			background #16A9f5